{
  "name": "be-por-automation-tests",
  "version": "1.0.0",
  "description": "Production-ready Playwright automation tests for BE POR application",
  "author": "QA Team",
  "license": "MIT",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:auth": "playwright test tests/auth/",
    "test:signin": "playwright test tests/auth/signin.spec.ts",
    "test:signup": "playwright test tests/auth/signup.spec.ts",
    "test:dashboard": "playwright test tests/dashboard/",
    "test:organization": "playwright test tests/dashboard/organization-create.spec.ts",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:parallel": "playwright test --workers=4",
    "test:with-report": "playwright test && playwright show-report",
    
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "install:browsers": "playwright install",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\""
  },
  
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.58.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}